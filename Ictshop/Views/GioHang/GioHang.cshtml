﻿@using Ictshop.Models;
@model List<GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <h2 class="text-center mb-4">GIỎ HÀNG <i class="fa fa-shopping-cart"></i></h2>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Mã SP</th>
                        <th>Tên SP</th>
                        <th>Ảnh bìa</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="font-italic">
                            <td>@item.iMasp</td>
                            <td>@item.sTensp</td>
                            <td><img src="@Url.Content("~"+item.sAnhBia)" width="50" height="50" /></td>
                            <td>@String.Format("{0:0,0}", item.dDonGia) VNĐ</td>
                            <td>@item.iSoLuong</td>
                            <td>@String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="6" class="text-end">
                            @Html.ActionLink("Chỉnh sửa giỏ hàng", "SuaGioHang", null, new { @class = "btn btn-outline-secondary" })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6" class="text-end">
                            @using (Html.BeginForm("ThanhToanDonHang", "GioHang"))
                            {
                                <input type="submit" value="Đặt hàng" class="btn btn-danger" />
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>