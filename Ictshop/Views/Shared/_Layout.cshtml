<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Điện thoại rẻ Thanh Hóa</title>

    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/Content/Style.css">
    @using Ictshop.Models
</head>

<style>
    .full-width-image img {
        width: 100%;
        height: auto;
    }
    .search-box {
        position: relative;
        width: 400px;

       
    }

    .search-input {
        width: 100%;
        padding: 10px;
        height: 40px;
        border-radius: 50px;
        border-color: gray;
    }

    .search-button {
        position: absolute;
        right: 0;
        top: 0;
        border: none;
        background: transparent;
        padding: 10px;
        cursor: pointer;
    }

    .btn-transparent {
        background-color: transparent;
        color: gray;
        border: none;
    }

    .dropdown-toggle:after {
        display: none;
    }

    .fa-bars {
        margin-right: 10px;
    }

</style>
   

<body>
    @{
        var u = Session["use"] as Ictshop.Models.Nguoidung;
    }


    <div class="full-width-image">
        <img src="~/HinhanhSP/bannerweb.jpg" alt="">
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="background-color: #3632a8 !important; height:50px">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/HinhanhSP/logo.png" width="50" height="50" class="d-inline-block align-top" alt="">
             
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Bổ sung phần navbar mới vào đây -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Tatcasanpham", "Sanpham")" style="color: white !important;">ĐIỆN THOẠI</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: white !important;" href="#">LAPTOP</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: white !important;" href="#">PHỤ KIỆN</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: white !important;" href="/Home/Contact">LIÊN HỆ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: white !important;" href="@Url.Action("Index", "DonHangs")">ĐƠN HÀNG</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>



    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-lg" style="display: flex; justify-content: space-between;">
            <!-- Thanh tìm kiếm -->
            <div class="search-box">
                <input class="search-input" type="text" placeholder="Tìm kiếm...">
                <button class="search-button" type="submit"><i class="fa fa-search"></i></button>
            </div>

            <!-- Dropdown Danh mục -->
            <div>
                <div class="dropdown">
                    <button class="btn btn-transparent dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style=" color: gray;">
                        <i class="fa fa-bars"></i> Danh mục sản phẩm 
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Điện thoại</a>
                        <a class="dropdown-item" href="#">Laptop</a>
                        <a class="dropdown-item" href="#">Phụ kiện</a>
                    </div>
                </div>
            </div>

            <!-- Sidebar hiện tại -->
            <div>
                <ul class="navbar-nav ml-auto">
                    @if (u != null)
                    {
                        <li class="nav-item">
                            <a href="@Url.Action("Profile", "User", new { id = u.MaNguoiDung  })" class="nav-link"> <i class="fa fa-user"></i> Xin chào : @u.Email</a>
                        </li>
                        <li class="nav-item">
                            <a href="/User/DangXuat" class="nav-link" style="color:red;"><i class="fa fa-sign-out-alt"></i> ĐĂNG XUẤT</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a href="/User/Dangky" class="nav-link"> <i class="fa fa-user-plus"></i> Đăng ký</a>
                        </li>
                        <li class="nav-item">
                            <a href="/User/Dangnhap" class="nav-link"> <i class="fa fa-sign-in-alt"></i> Đăng nhập</a>
                        </li>
                    }
                    <li class="nav-item">
                        <div class="col-sm-4 col-md-0">
                            <a>@Html.Action("GioHangPartial", "GioHang", new { @class = "giohang" })</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4"

       
        @RenderBody()
        <hr />

        <br />
    </div>

    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h2>Bảo hành</h2>
                    <p>Chính sách mua hàng</p>
                    <p>Chính sách bảo hành</p>
                    <p>Trung tâm bảo hành</p>
                    <p>Tra cứu bảo hành</p>
                </div>
                <div class="col-md-3">
                    <h2>Liên kết</h2>
                    <p>Tin tức Mobile</p>
                    <p>Lập trình Web</p>
                    <p>GenkVN</p>
                    <p>Dân trí</p>
                </div>
                <div class="col-md-3">
                    <h2>Thông tin</h2>
                    <p>Về chúng tôi</p>
                    <p>Liên hệ</p>
                    <p>Góp ý</p>
                    <p>Tra cứu</p>
                </div>
                <div class="col-md-3">
                    <h2>Theo dõi</h2>
                    <p>Kênh youtube</p>
                    <p>Fanpage</p>
                    <p>Shopee</p>
                    <p>Group</p>
                </div>
            </div>
        </div>
        <hr class="my-4">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <a href="https://www.facebook.com/" target="_blank"><i class="fab fa-facebook-f fa-lg text-white me-4"></i></a>
                        <a href="https://www.google.com/" target="_blank"><i class="fab fa-google fa-lg text-white me-4"></i></a>
                        <a href="https://www.instagram.com/" target="_blank"><i class="fab fa-instagram fa-lg text-white me-4"></i></a>
                        <a href="https://twitter.com/" target="_blank"><i class="fab fa-twitter fa-lg text-white me-4"></i></a>
                    </div>
                </div>
                <div class="col-md-12 text-center">
                    <p class="mb-0">&copy; @DateTime.Now.Year - LongVuMobile</p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>