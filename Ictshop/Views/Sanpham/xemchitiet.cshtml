

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="text-center">
                <h2>CHI TIẾT SẢN PHẨM</h2>
                <img src="@Url.Content("~" + @Model.Anhbia)" class="img-fluid img-thumbnail mt-3" alt="@Model.Tensp" />
            </div>
        </div>
        <div class="col-md-6 mt-5">
            <div class="text-center">
                <h3 class="mt-3">@Model.Tensp</h3>
                <h4 class="mt-3">Số lượng: @Model.Soluong</h4>
                <h4 class="mt-3">Thẻ sim: @Model.Thesim</h4>
                <h4 class="mt-3">Bộ nhớ trong: @Model.Bonhotrong</h4>
                <h4 class="mt-3">RAM: @Model.Ram</h4>
                <h4 class="mt-3">Hãng sản xuất: @Model.Hangsanxuat.Tenhang</h4>
                <h4 class="mt-3">Hệ điều hành: @Model.Hedieuhanh.Tenhdh</h4>
                <h3 class="text-danger">Giá: @String.Format("{0:0,0}", @Model.Giatien) VND</h3>
                <p class="mt-3">@Model.Mota</p>

                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = Model.Masp, @strURL = Request.Url.ToString() }))
                {
                    <button type="submit" class="btn btn-mua-hang btn-primary mt-3">Mua hàng</button>
                }
            </div>
        </div>
    </div>
</div>


