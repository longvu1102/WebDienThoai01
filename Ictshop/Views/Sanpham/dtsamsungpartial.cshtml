@using Ictshop.Models;
@model List<Sanpham>

<div class="row">
    <div class="col-12">
        <h3 class=" text-center  p-3">SAMSUNG</h3>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card h-100">
                <a href="@Url.Action("xemchitiet", new { @Masp = item.Masp })">
                    <img src=@Url.Content("~" + item.Anhbia.ToString()) class="card-img-top" alt="Product Image" style="width: 100%; height: 200px; object-fit: contain;" />
                </a>
                <div class="card-body text-center">
                    <h4 class="card-title"><a href="@Url.Action("xemchitiet", new { @Masp = item.Masp })">@item.Tensp</a></h4>
                    <h5 class="text-danger">Giá: @String.Format("{0:0,0}", @item.Giatien) VND</h5>
                </div>
                <div class="card-footer">
                    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                    {
                        <input class="btn btn-add-cart btn-block" type="submit" value="Thêm vào giỏ" id="bgnGioHang" />
                    }
                </div>
            </div>
        </div>
    }
</div>

<style>
    a {
        color: black;
        text-decoration: none;
    }

        a:hover {
            color: black;
            text-decoration: none;
        }

    .btn-add-cart {
        background-color: transparent;
        border-color: #3632a8;
        color: #3632a8;
        transition: 0.3s;
    }

        .btn-add-cart:hover {
            background-color: black;
            color: white;
            text-decoration: none;
        }
</style>