<div class="row mt-5" style="width: 100%;">
    <div class="col-12">
        <h3 class="text-center p-3">Tất cả sản phẩm</h3>
    </div>
    <div class="col-12 mb-5">
        @using (Html.BeginForm("Search", "Sanpham", FormMethod.Get))
        {
            <div class="input-group mb-5">
                <input type="text" class="form-control" name="name" placeholder="Nhập tên sản phẩm" />
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                </div>
            </div>
        }
    </div>
</div>

<div class="row product-grid" style="width: 100%;">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4 product-item">
            <div class="card d-flex h-100">
                <a href="@Url.Action("xemchitiet", new { @Masp = item.Masp })">
                    <img src="@Url.Content("~" + item.Anhbia)" class="card-img-top" alt="Product Image" style="width: 100%; height: 200px; object-fit: contain;" />
                </a>
                <div class="card-body text-center">
                    <h4 class="card-title"><a href="@Url.Action("xemchitiet", new { @Masp = item.Masp })">@item.Tensp</a></h4>
                    <h5 class="text-danger">Giá: @String.Format("{0:0,0}", item.Giatien) VND</h5>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                    {
                        <input class="btn btn-add-cart" type="submit" value="Thêm vào giỏ" />
                    }
                </div>
            </div>
        </div>
    }
</div>

<style scoped>
    .product-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .product-item {
        /* Add custom styles for product cards if desired */
    }

    a {
        color: black;
        text-decoration: none
    }

    .btn-add-cart {
        background-color: transparent;
        border-color: #3632a8;
        color: #3632a8;
        transition: 0.3s;
    }

        .btn-add-cart:hover {
            background-color: black;
            color: white;
            text-decoration: none;
        }
</style>